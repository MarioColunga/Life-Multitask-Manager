
<link rel="stylesheet" href="/css/login.css" />
<div>
  <div class="container" id="container">
    <div class="form-container sign-up-container">
      <form action="#">
        <input id="userName" type="text" placeholder="Name" />
        <input id="userLastName" type="text" placeholder="Last name" />
        <input id="userEmail" type="email" placeholder="Email" />
        <input id="userPassword" type="password" placeholder="Password" />
        <input
          id="userConfirmPassword"
          type="password"
          placeholder="Confirm password"
        />
        <button id="sign-up">Sign Up</button>
      </form>
    </div>

    <div class="form-container sign-in-container">
      <form action="#">
        <h1>Sign in</h1>
        <input type="email" placeholder="Email" />
        <input type="password" placeholder="Password" />
        <button>Sign In</button>
      </form>
    </div>

    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Create an Account</h1>
          <p>To keep connected with us please add your personal info</p>
        </div>

        <div class="overlay-panel overlay-right">
          <h1>You dont have a user?</h1>
          <p>
            Enter your personal details and start journey with Life Multitask
            Makager
          </p>
          <button class="ghost" id="signUp">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>

